@model IEnumerable<NBL_USA.Models.LeagueStaffListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("Save Result"))
{
<div class="alert alert-success fade in" role="alert">

    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
    @TempData["SaveResult"]
</div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LeagueStaffName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LeagueStaffPosition)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LeagueStaffName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeagueStaffPosition)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LeagueStaffId }) |
                @Html.ActionLink("Details", "Details", new { id = item.LeagueStaffId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LeagueStaffId })
            </td>
        </tr>
    }

</table>

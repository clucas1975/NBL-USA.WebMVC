@model IEnumerable<NBL_USA.Models.TeamListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("Save Result"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
        </div>
}
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TeamOwner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeamName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeamLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeamArena)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.TeamPlayers)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamOwner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamArena)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TeamPlayers)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TeamId }) |
                @Html.ActionLink("Details", "Details", new { id = item.TeamId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TeamId })
            </td>
        </tr>
            }

        </table>
